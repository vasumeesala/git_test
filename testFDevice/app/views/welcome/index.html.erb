<div class="row">
  <%=image_tag("slider-bg1.jpg", class: "slider-bg1")%>
</div>
<div class="row">
  <h2> Submissions</h2>
    <div class="row">
    <p>
    <table>
    	<thead>
    		<th> Title </th>
    		<th> Text  </th>
    		<th> Email </th>
    		<th colspan="3" >
    			View/Edit/Delete
    		</th>
    	</thead>
    	<tbody>
    	<%@article.each do |article| %>
    	<tr>
    		<td><%= article.title %></td>
    		<td><%= article.text %></td>
    		<td><%= article.user.email %></td>
    		<td><%= link_to 'View', article_path(article) %></td>
    		<td><%= link_to 'Edit', edit_article_path(article)%></td>
    		<td><%= link_to 'Delete', article_path(article),
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %></td>
    	</tr>
    	<% end %>
    	</tbody>
    </table>	
    <%= foundation_paginate @article %>
    </p>	
    <%= link_to 'New Article', new_article_path, class:"button" %>
    </div>

  <div class="row">
    <h1>Campaigns</h1>
    <table>
      <thead>
        <tr>
          <th>Campaign name</th>
          <th>Campaign description</th>
          <th>Reward</th>
          <th>Tnc</th>
          <th>Campaign startdate</th>
          <th>Campaign enddate</th>
          <th>Tags</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @campaign.each do |campaign| %>
          <tr>
            <td><%= campaign.campaign_name %></td>
            <td><%= campaign.campaign_description %></td>
            <td><%= campaign.reward %></td>
            <td><%= campaign.tnc %></td>
            <td><%= campaign.campaign_startdate %></td>
            <td><%= campaign.campaign_enddate %></td>
            <td><%=raw campaign.tag_list.map { |t|  link_to t, tag_path(t) }.join(' , ') %></td>
            <td><%= link_to 'Show', campaign %></td>
            <td><%= link_to 'Edit', edit_campaign_path(campaign) %></td>
            <td><%= link_to 'Destroy', campaign, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>